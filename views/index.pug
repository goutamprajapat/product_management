    include Navbar.pug
       .modal.fade#getnewProductModal(tabindex="-1", aria-labelledby="getnewProductModal", aria-hidden="true",data-bs-backdrop="static" data-bs-keyboard="false")
        .modal-dialog.modal-lg
          .modal-content
            .modal-header
              h1.modal-title.fs-5#exampleModalLabel Add Product
              button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
            .row
              .modal-body.col-6
                  .mb-3
                    input.form-control#ProductName(type="text", aria-describedby="emailHelp" placeholder="Product Name" )
                  .mb-3
                    input.form-control#productOuantity(type="text" placeholder="Ouantity")
                  .mb-3
                    input.form-control#ProductPrice(type="text", aria-describedby="emailHelp" placeholder="price" )
                  .mb-3
                    input.form-control#ProductDate(type="date" )
                  .mb-3 
                    input.form-control#pic(type="file", name="Pic")
                  .modal-footer.d-flex.justify-content-center.gap-2
                    button.btn.btn-primary#saveNewProduct Add
                    button.btn.btn-outline-danger(type="Reset") Reset
              .modal-body.col-4.d-flex.align-items-center
                img.border#imgpreview(src="https://t4.ftcdn.net/jpg/04/81/13/43/360_F_481134373_0W4kg2yKeBRHNEklk4F9UXtGHdub3tYk.jpg", width='150' height="150" alt="img")
       .modal.fade#updateProduct(tabindex="-1", aria-labelledby="updateProduct", aria-hidden="true",data-bs-backdrop="static" data-bs-keyboard="false")
        .modal-dialog.modal-lg
          .modal-content
            .modal-header
              h1.modal-title.fs-5#exampleModalLabel Update Product
              button.btn-close(type="button", data-bs-dismiss="modal", aria-label="Close")
            .row
              .modal-body.col-6
                  .mb-3
                    input.form-control#updateProductName(type="text", aria-describedby="emailHelp" placeholder="Product Name" )
                  .mb-3
                    input.form-control#updateproductOuantity(type="text" placeholder="Ouantity")
                  .mb-3
                    input.form-control#updateProductPrice(type="text", aria-describedby="emailHelp" placeholder="price" )
                  .mb-3
                    input.form-control#updateProductDate(type="date" )
                  .mb-3 
                    input.form-control#updatepic(type="file", name="Pic")
                  .modal-footer.d-flex.justify-content-center.gap-2
                    button.btn.btn-primary#UpdateNewProduct Update
                    button.btn.btn-outline-danger(type="Reset") Reset
              .modal-body.col-4.d-flex.align-items-center
